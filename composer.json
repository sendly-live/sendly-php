{
  "name": "sendly/sendly-php",
  "description": "Official PHP SDK for the Sendly SMS API",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "sendly",
    "sms",
    "messaging",
    "api",
    "sdk"
  ],
  "homepage": "https://github.com/sendly-live/sendly-php",
  "authors": [
    {
      "name": "Sendly",
      "email": "support@sendly.live"
    }
  ],
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^7.0",
    "psr/http-client": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Sendly\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sendly\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse src --level=8",
    "cs": "phpcs src --standard=PSR12"
  },
  "config": {
    "sort-packages": true
  }
}
